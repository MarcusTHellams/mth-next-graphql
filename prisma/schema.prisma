generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data.db"
}

model Role {
  id          String @id
  name        String
  description String
  users        User[]
}

model Task {
  id          String  @id
  title       String
  description String?
  ownerId     String
  owner        User    @relation(fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: Restrict)
}

model User {
  id        String @id
  firstName String
  lastName  String
  username  String @unique
  email     String @unique
  password  String
  tasks      Task[]
  roles      Role[]
}
